  "item": [
    {
      "name": "Story Generation",
      "item": [
        {
          "name": "Generate Story - Epic Tone",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"characterName\": \"Aragorn\",\n  \"characterLevel\": 10,\n  \"characterClass\": \"Warrior\",\n  \"recentTasks\": [\n    {\n      \"title\": \"Complete morning workout\",\n      \"description\": \"Did 50 pushups and 30 situps\",\n      \"category\": \"fitness\",\n      \"difficulty\": 7\n    },\n    {\n      \"title\": \"Learn TypeScript\",\n      \"description\": \"Completed advanced TypeScript tutorial\",\n      \"category\": \"learning\",\n      \"difficulty\": 8\n    }\n  ],\n  \"tone\": \"epic\",\n  \"length\": \"medium\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ai/story/generate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ai", "story", "generate"]
            }
          },
          "response": []
        },
